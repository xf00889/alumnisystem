# NORSU Alumni System - Production Environment Variables
# Copy these to your Render environment variables section

# Core Django Settings
DEBUG=False
SECRET_KEY=your-secret-key-here-generate-a-new-one
DATABASE_URL=postgresql://username:password@hostname:port/database
RENDER_EXTERNAL_HOSTNAME=your-app-name.onrender.com
SITE_URL=https://your-app-name.onrender.com

# Optional: Redis for WebSocket support
# REDIS_URL=redis://hostname:port

# Optional: Email Configuration
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
# DEFAULT_FROM_EMAIL=your-email@gmail.com

# Optional: AWS S3 for Media Files
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1

# Optional: Social Authentication
# LINKEDIN_API_KEY=your-linkedin-client-id
# LINKEDIN_API_SECRET=your-linkedin-client-secret

# Security Settings (recommended for production)
ALLOWED_HOSTS=your-app-name.onrender.com,localhost,127.0.0.1